apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig

metadata:
  name: {{ name }}
  region: us-west-2

nodeGroups:
  - name: {{ name }}-ng
    desiredCapacity: {{ numworkers }}
    iam:
      withAddonPolicies:
        cloudWatch:
        {%- if addons['togalb'] -%}
        albIngress: true
        {%- endif -%}
        {%- if addons['togca'] -%}
        autoScaler: true
        {%- endif -%}
        {%- if addons['togappmesh'] -%}
        appMesh: true
        {%- endif -%}
        {%- if addons['togxray'] -%}
        xRay: true
        {% endif %}

vpc:
  id: "vpc-0470143a7c277ae00"  # (optional, must match VPC ID used for each subnet below)
  cidr: "192.168.0.0/16"       # (optional, must match CIDR used by the given VPC)
  subnets:
    private:
      us-west-2a:
        id: "subnet-09020bc85e58f9bbf"
      us-west-2b:
        id: "subnet-0620283eb6fe258cc"
      us-west-2d:
        id: "subnet-0f95d03db1bdf9109"
    public:
      us-west-2a:
        id: "subnet-0f5359d858ba4098d"
      us-west-2b:
        id: "subnet-0548de7d8ab9a2c5e"
      us-west-2d:
        id: "subnet-0fc8964f4bc35681f"

iam:
  serviceRoleARN: {{ iamrole }}

cloudWatch:
  clusterLogging:
    enableTypes: ["audit", "authenticator", "controllerManager"]